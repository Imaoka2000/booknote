<div class="col-md-4">
  <img src="<%= @book[:cover] %>" class="img-fluid rounded-start" alt="表紙">
</div>
<div class="col-md-8">
  <div class="card-body">
    <h5 class="card-title"><%= @book[:title] %></h5>
    <p class="card-text">著者: <%= @book[:author] %></p>
    <p>投稿者: <%= @review.user.username %></p>
    <p class="card-text"><%= @review.content %></p>
    <% if @review.user == current_user %>
      <%= link_to "削除", review_path(@review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
    <% end %>
    <p><%= @review.user %></p>
    <p><%= current_user %></p>
  </div>
</div>
